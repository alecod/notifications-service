// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notifications {
  id         String    @id
  recipient  String // chave estrangeira
  content    String
  category   String
  readAt     DateTime?
  created_at DateTime  @default(now())

  @@index([recipient]) // defino com o @index
  @@map("notifications")
}
